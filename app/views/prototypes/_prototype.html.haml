.col-sm-4.col-md-3.proto-content
  .thumbnail
    = link_to image_tag(prototype.set_main_thumbnail), prototype_path(prototype)
    .caption
      %h3
        = prototype.title
      .proto-meta
        .proto-user
          = link_to prototype.user.name, user_path(prototype.user)
        .proto-posted
          = prototype.posted_date
        .proto-editbottun
          = link_to "編集", edit_prototype_path(prototype), method: :get
        .proto-tag-btn
          = link_to "tags.title", "/tags/#{:id}", method: :get, class: 'btn'
