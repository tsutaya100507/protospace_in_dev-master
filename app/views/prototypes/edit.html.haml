.container.proto-new
  = form_for @prototype do |f|
    .col-md-8.col-md-offset-2
      %header.row.user-nav.row
        .col-md-12
          %h4 Title
          .proto-new-title
            = f.text_field :title, required: true, autofocus: true, placeholder: "Input Title"
      .row
        .col-md-12
          %h4 Main Thumbnail
          .cover-image-upload#main_image_uploader
            = f.fields_for :captured_images, @main do |main_image|
              %img
              = main_image.file_field :content, required: true
              = main_image.hidden_field :status, value: "main"
        .col-md-12
          %h4 Sub Thumbnails
          %ul.proto-sub-list.list-group
          - if @sub.present?
            - 3.times do |i|
              %li.list-group-item.col-md-4
                .image-upload
                  = f.fields_for :captured_images, @sub do |sub_image|
                    %img

                    = sub_image.file_field :content
                    = sub_image.hidden_field :status, value: "sub"

                    = image.file_field :content
                    = image.hidden_field :status, value: "sub"
          - else
            - t=3-@sub.length
            - t.times do |t|
              %li.list-group-item.col-md-4
                .image-upload
                  = f.fields_for :captured_images, @sub_new do |image|
                    %img
                    = image.file_field :content
                    = image.hidden_field :status, value: "sub"
                  
      .row.proto-description
        .col-md-12
          %h4 Catch Copy
          = f.text_field :catch_copy, require: true, placeholder: "Input Catch Copy"
        .col-md-12
          %h4 Concept
          = f.text_area :concept, require: true, placeholder: "Input Concept"

          %h4 Tag List
          = f.fields_for :tags do |t|
            = t.text_field :title, placeholder:"ex)Web"
          = f.fields_for :tags do |t|
            = t.text_field :title, placeholder:"ex)rails"
          = f.fields_for :tags do |t|
            = t.text_field :title, placeholder:"ex)UI/UX"
      .row.text-center.proto-btn
        = f.submit "UPDATE", id: "button", class: "btn btn-lg btn-primary btn-block"
